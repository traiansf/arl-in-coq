 % headline

               \setbeamertemplate{headline}
   {\ifdefempty{\beamer@frametitle}{}{\ifdef{\beamer@RV@final}{}{
        \begin{tikzpicture}[overlay, remember picture]

                \coordinate (UL) at (0,-.375\beamer@height); %upper left corner of the slide
                \coordinate (UR) at (\paperwidth,0); %upper right of the slide

                \draw[draw=none,fill=RV.fg] (UL) rectangle ([shift={(3.5em,-2ex)}] UL); % background rectabgle
                \node [anchor=north east] at ([shift={(-1em,-1em)}] UR) {\includegraphics[width=.15\paperwidth]{RVgraphics/rv-logo}};
        \end{tikzpicture}
   }}
    }

