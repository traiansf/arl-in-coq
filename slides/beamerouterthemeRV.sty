\define@key{beamerframe}{final}[true]{\def\beamer@RV@final}

% final page

                  \defbeamertemplate{final page}{text}[1]
   {
        \begin{tikzpicture}[overlay, remember picture]
                 \node [anchor=center] at (current page.center) {\includegraphics[height=1.75\paperheight]{RVgraphics/end-page}};
                \node [anchor=south west] at (current page.south west) {\includegraphics[width=.15\paperwidth]{RVgraphics/rv-logo}};
                 \node [anchor=center] at (current page.center) {\usebeamerfont{subtitle}\textcolor{black}{#1}};
       \end{tikzpicture}
   }

               \setbeamertemplate{final page}
   {
   }

                  \newcommand{\finalpage}[1]
   {
           \begin{frame}[plain,noframenumbering]
                  \setbeamertemplate{final page}[text]{#1}
                  \usebeamertemplate{final page}
            \end{frame}
   }
